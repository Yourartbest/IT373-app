<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section id="about-josh" class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style" style="{% render 'spacing-style', settings: section.settings %}">
  <div class="about-josh-grid">
    <div class="josh-profile">
        {% if section.settings.josh_image %}
          <img src="{{ section.settings.josh_image | image_url: width: 400 }}"
               alt="Josh Mantilla" class="josh-image">
        {% endif %}
        <div class="josh-bio">
          <h2>{{ section.settings.title }}</h2>
          <div class="josh-description">
            {{ section.settings.description }}
          </div>
        </div>
    </div>

    <div class="credentials-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'credential' %}
            <div class="credential-item card">
              {% if block.settings.icon %}
                <i class="{{ block.settings.icon }}" aria-hidden="true"></i>
              {% endif %}
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Josh Mantilla",
  "settings": [
    { "type": "select", "id": "section_width", "label": "Width", "options": [ { "value": "page-width", "label": "Page width" }, { "value": "full-width", "label": "Full width" } ], "default": "page-width" },
  { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding-block-start", "label": "Top padding", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 32 },
    { "type": "range", "id": "padding-block-end", "label": "Bottom padding", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 32 },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "About Josh Mantilla"
    },
    {
      "type": "image_picker",
      "id": "josh_image",
      "label": "Josh's Photo"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Bio Description",
      "default": "<p>Founder of ForgeFix. Explorer/Sage archetype: grounded, hands-on expertise in niche 3D printers, remote diagnostics, firmware tuning, and parts sourcing.</p>"
    }
  ],
  "blocks": [
    {
      "type": "credential",
      "name": "Credential",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon class (optional)",
          "default": "fas fa-tools"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Credential Title",
          "default": "Certified Repair Technician"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Credential Description",
          "default": "Specialized in diagnostics and firmware calibration for boutique 3D printers."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Josh Mantilla"
    }
  ]
}
{% endschema %}
