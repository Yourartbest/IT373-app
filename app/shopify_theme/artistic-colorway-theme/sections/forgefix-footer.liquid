<div class="forgefix-footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-section footer-brand">
        <h3>ForgeFix</h3>
        <p class="footer-text">Repair guides & help for niche 3D printers</p>
        <ul class="footer-contact">
          <li><strong>Phone:</strong> <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></li>
          <li><strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></li>
          <li><strong>Location:</strong> {{ section.settings.location }}</li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>RESOURCES</h4>
        <ul class="footer-links">
          <li><a href="/pages/documents">Guides</a></li>
          <li><a href="/pages/videos">Videos</a></li>
          <li><a href="/pages/documents">Documentation</a></li>
          <li><a href="{{ routes.collections_url }}">Shop</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>QUICK LINKS</h4>
        <ul class="footer-links">
          <li><a href="{{ routes.root_url }}#about-josh">About</a></li>
          <li><a href="{{ routes.root_url }}#town-hall">Town Hall</a></li>
          <li><a href="{{ routes.page_url }}contact">Contact</a></li>
          <li><a href="{{ routes.account_url }}">Account</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      <p><a class="back-to-top" href="#top">Back to Top â†‘</a></p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ForgeFix Footer",
  "settings": [
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+1 (000) 000-0000"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "support@forgefix.example"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location",
      "default": "Remote, Online"
    }
  ],
  "presets": [
    {
      "name": "ForgeFix Footer"
    }
  ]
}
{% endschema %}
